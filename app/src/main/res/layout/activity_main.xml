<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Controller.Activity.MainActivity">

    <com.example.smart_wb.etc.NoSwipeViewPager
        android:id="@+id/xml_main_viewpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/xml_main_tablayout"
        >
    </com.example.smart_wb.etc.NoSwipeViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/xml_main_tablayout"
        android:background="#FFFFFF"
        android:elevation="5dp"
        app:tabIndicatorColor="#2FA9FF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>